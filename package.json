{
	"name": "metro",
	"displayName": "metro",
	"description": "pacvue tool",
	"version": "1.0.7",
	"repository": {
		"type": "git",
		"url": "https://github.com/chenglie33/pluginvs.git"
	},
	"publisher": "chenlei",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:metro.pacvue.show",
		"onView:metro.pacvue.info",
		"onLanguage:javascript",
		"onLanguage:vue"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "metro",
			"properties": {
				"metro.useInsideShow": {
					"type": "string",
					"default": "true",
					"enum": [
						"false",
						"true"
					],
					"description": "是否将国际化展示在块状内."
				}
			}
		},
		"commands": [
			{
				"command": "metro.replace",
				"title": "replace text"
			},
			{
				"command": "metro.show18Tool",
				"title": "show18Tool"
			},
			{
				"command": "metro.showCreate",
				"title": "showCreate"
			},
			{
				"command": "metro.refresh",
				"title": "refresh",
				"icon": {
					"light": "images/refresh.svg",
					"dark": "images/refresh.svg"
				}
			},
			{
				"command": "metro.preview",
				"title": "preview",
				"icon": {
					"light": "images/Preview.svg",
					"dark": "images/Preview.svg"
				}
			},
			{
				"command": "metro.export",
				"title": "导出"
			},
			{
				"command": "metro.replaceAll",
				"title": "replace text",
				"icon": {
					"light": "images/replaceAll.svg",
					"dark": "images/replaceAll.svg"
				}
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "metro.refresh",
					"when": "view == metro.pacvue.info && viewItem == dependency",
					"group": "inline"
				},
				{
					"command": "metro.replaceAll",
					"when": "view == metro.pacvue.info && viewItem == dependency",
					"group": "inline"
				},
				{
					"command": "metro.preview",
					"when": "view == metro.pacvue.info && viewItem == dependencyItem",
					"group": "inline"
				},
				{
					"command": "metro.export",
					"when": "view == metro.pacvue.info && viewItem == dependency",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "metroContrl",
					"title": "metroTools",
					"icon": "images/Shipments.svg"
				}
			]
		},
		"views": {
			"metroContrl": [
				{
					"id": "metro.pacvue.show",
					"type": "webview",
					"contextualTitle": "Pavue",
					"name": "工具箱"
				}
			]
		}
	},
	"scripts": {
    "i18n": "node ./util/i18ntest.js",
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"copy-webpack-plugin": "^10.2.4",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0"
	},
	"dependencies": {
		"@vscode/codicons": "^0.0.32",
		"@vue/compiler-sfc": "^3.2.37",
		"d3-dsv": "^3.0.1",
		"download-git-repo": "^3.0.2",
		"electron": "^20.0.3",
		"fs-extra": "^10.1.0",
		"globby": "^13.1.2",
		"lodash": "^4.17.21",
		"magic-string": "^0.26.7",
		"single-line-log": "^1.1.2",
		"xlsx": "^0.18.5",
		"xlsx-style": "^0.8.13"
	}
}
